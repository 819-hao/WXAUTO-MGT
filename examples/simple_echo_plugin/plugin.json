{
  "plugin_id": "simple_echo_plugin",
  "name": "简单回声插件",
  "version": "1.0.0",
  "description": "一个简单的示例插件，将收到的消息原样返回，用于演示插件开发流程",
  "author": "WXAUTO-MGT Team",
  "homepage": "https://github.com/zj591227045/WXAUTO-MGT",
  "license": "MIT",
  "entry_point": "main.py",
  "class_name": "SimpleEchoPlugin",
  "dependencies": [],
  "min_wxauto_version": "1.0.0",
  "python_version": "3.8",
  "supported_os": ["Windows", "Linux", "Darwin"],
  "permissions": [
    "config.read",
    "config.write",
    "message.process"
  ],
  "tags": [
    "example",
    "demo",
    "echo",
    "simple"
  ],
  "config_schema": {
    "type": "object",
    "properties": {
      "prefix": {
        "type": "string",
        "title": "回复前缀",
        "description": "在回复消息前添加的前缀文本",
        "default": "回声: "
      },
      "suffix": {
        "type": "string",
        "title": "回复后缀",
        "description": "在回复消息后添加的后缀文本",
        "default": ""
      },
      "enabled": {
        "type": "boolean",
        "title": "启用插件",
        "description": "是否启用此插件",
        "default": true
      },
      "delay_seconds": {
        "type": "number",
        "title": "回复延迟",
        "description": "回复前的延迟时间（秒）",
        "default": 0.5,
        "minimum": 0.0,
        "maximum": 10.0
      },
      "max_length": {
        "type": "integer",
        "title": "最大长度",
        "description": "回复消息的最大长度，超过将被截断",
        "default": 200,
        "minimum": 10,
        "maximum": 1000
      }
    },
    "required": []
  }
}
